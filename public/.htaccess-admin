# .htaccess for admin subdomain (admin.juriscompany.net)
# Copy this file to .htaccess in the subdomain's root folder on Hostinger

RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirect root to /admin/login
RewriteRule ^$ /admin/login [R=302,L]

# Handle React Router (SPA) - redirect all non-file requests to index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.html [L]
